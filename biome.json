{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5",
      "bracketSameLine": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "warn"
      },
      "style": {
        "noImplicitBoolean": "warn",
        "useFragmentSyntax": "warn",
        "useNamingConvention": {
          "level": "info",
          "options": {
            "strictCase": true,
            "conventions": [
              {
                "selector": {
                  "kind": "objectLiteralMember",
                  "scope": "any"
                },
                "formats": ["CONSTANT_CASE", "camelCase"]
              }
            ]
          }
        }
      }
    }
  }
}
